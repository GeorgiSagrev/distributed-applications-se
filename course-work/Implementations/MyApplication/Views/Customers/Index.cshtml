@model MyApplication.ViewModels.Customers.IndexVM
@{
}

<h4>Клиенти</h4>

<table class="table">
    <tr>
        <th >
            Име
        </th>
        <th >
            Фамилия
        </th>
        <th >
            Адрес
        </th>
        <th >
            Сметка
        </th>
        <th >
            Абонамент
        </th>
        <th >
            Общ брой поръчки
        </th>
        <th >
            Дата на регистрация
        </th>
        <th  colspan="2">
            Действия
        </th>
    </tr>

    @foreach (var item in Model.Customers)
    {
        <tr>
            <td >
                @item.FirstName
            </td>
            <td >
                @item.LastName
            </td>
            <td >
                @item.Address
            </td>
            <td >
                @item.AccountBalance
            </td>
            <td >
                @item.DeluxeAccount
            </td>
            <td >
                @item.TotalOrders
            </td>
            <td >
                @item.RegisteredOn
            </td>

            <td >
                <a href="/Customers/Edit?id=@item.Id" class="text-primary">Редактирай</a>
            </td>

            <td >
                <a href="/Customers/Delete?id=@item.Id" class="text-danger" method="delete" onclick="return confirm('Delete Customer?');">Изтрий</a>
            </td>
        </tr>
    }

</table>

<div class="d-flex justify-center">
    <a href="/Customers/Add">Добави </a>
</div>

<h4>Търси</h4>

<div class="search-container">
    <form id="searchForm" action="/Customers/Search" method="post">
        <input type="text" id="firstName" placeholder="Search.." name="firstName">
        <button type="submit">Търси</button>
    </form>
</div>